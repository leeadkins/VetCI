<div class="project" id="<%= @project.name %>">
  <h2>
    <%= @project.name %>
  </h2>
  <span class="status <%= @project.last_build_status %>"></span>
  <div class="bottom_tab">
		<span class="last_build">Latest Build: <%= @project.builds.last.dashboard_time unless @project.builds.last.nil? %></span>
		<a class="tab_button build_project" href="#">Build</a>
	</div>
</div>

<% @project.builds.each do |build| %>
  <div class="build <%= build.status_class %>">
    <a href="<%= "/#{@project.name}/builds/#{build.id}/destroy" %>" class="delete">X</a>
    <p class="title">
      Build Time: <%= build.friendly_time %>
    </p>
    
    <div class="build_details">
      <%= build.commit_info.to_s %>
    </div>
    
    <div class="results">
      <pre class="terminal"><code><%=ansi_color_codes escape_html(build.output) %></code></pre>
    </div>
    <p class="results_toggle">
      show more
    </p> 
  </div>
<% end %>